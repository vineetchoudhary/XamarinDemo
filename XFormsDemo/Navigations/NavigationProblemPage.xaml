<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            x:Class="XFormsDemo.Navigations.NavigationProblemPage"
            xmlns:local="clr-namespace:XFormsDemo.Navigations">
    <NavigationPage Title="Activities">
        <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource" iOS="heart.png"></OnPlatform>
        </NavigationPage.Icon>
        <x:Arguments>
            <local:NPActivityPage></local:NPActivityPage>
        </x:Arguments>
    </NavigationPage>
    <local:NPProfilePage Title="Profile">
        <local:NPProfilePage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource" iOS="user.png"></OnPlatform>
        </local:NPProfilePage.Icon>
    </local:NPProfilePage>
</TabbedPage>
