<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:XFormsDemo.AppImages"
             x:Class="XFormsDemo.ImageURIPage">
    
        <ScrollView HeightRequest="{Binding Source={x:Reference image}, Path=HeightRequest}"
                    WidthRequest="{Binding Source={x:Reference image}, Path=WidthRequest}"
                    BackgroundColor="Silver">
            <Image x:Name="image"
                   Source="{local:AppImages CoverImage.jpg}"></Image>
        
        <!--<ActivityIndicator IsRunning="{Binding Source={x:Reference image}, Path=IsLoading}"
                           AbsoluteLayout.LayoutBounds="0.5, 0.5, 50, 50"
                           AbsoluteLayout.LayoutFlags="PositionProportional"></ActivityIndicator>-->
         </ScrollView>
</ContentPage>