<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XFormsDemo.Common.Loader"
             xmlns:lottie="clr-namespace:Lottie.Forms;assembly=Lottie.Forms">
    <ContentView AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All"
                 BackgroundColor="Black"
                 Opacity="0.7">
    </ContentView>
    <lottie:AnimationView x:Name="notificationAnimation" 
                          Animation="material_wave_loading.json"
                          AutoPlay="true"
                          Loop="true"
                          BackgroundColor="Transparent"
                          AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 100"
                          AbsoluteLayout.LayoutFlags="PositionProportional">
    </lottie:AnimationView>
</AbsoluteLayout>
